<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/bottom_sheet_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bgimage"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:id="@+id/sellerName"
        android:text="Seller Name"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:id="@+id/bookPicture"
            android:layout_margin="10dp"
            android:src="@drawable/email"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="10">

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="3.4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/bookTitleBuyer"
                android:textSize="17sp"
                android:text="Book Title"
                android:textColor="#fff"/>
            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/bookAuthorBuyer"
                android:text="Book Author"
                android:textColor="#fff"/>
            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/SellerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+03435664663"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#fff"/>
            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book price"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/bookPriceBuyer"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#fff"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/btn_bg"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:text="Description"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ff7c17"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnQuantity"
        android:background="@drawable/btn_bg"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_bg"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ff7c17"
        android:text="Submit"

        />

</LinearLayout>