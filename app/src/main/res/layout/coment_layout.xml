<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
 >


    <com.mikhaellopez.circularimageview.CircularImageView

        android:id="@+id/profilepiccomment"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/biddescription"
        android:layout_toRightOf="@id/profilepiccomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Summair"
        android:padding="3dp"
        android:layout_marginLeft="4dp"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:layout_below="@id/biddescription"

        android:id="@+id/cmddesc"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/profilepiccomment"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_comment_left"
        android:text="Hello i am
        summair
        ssssss"/>







</RelativeLayout>
